{
  "appId": "com.rimworld.moddownloader",
  "productName": "RimWorld Mod Downloader",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist/**/*",
    "out/**/*",
    "package.json"
  ],
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "sign": null,
    "signingHashAlgorithms": null
  },
  "portable": {
    "artifactName": "RimWorld-Mod-Downloader-${version}-portable.exe"
  },
  "asar": true,
  "compression": "maximum"
}
